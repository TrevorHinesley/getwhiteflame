html, body {
  height: 100%;
  width: 100%; 
  font-family: 'Open Sans', sans-serif;
  color: #fff;
}

#main-bg {
  height: 100%;
  width: 100%;
  background: url(<%=asset_path('hhss-logo.png')%>) no-repeat center center fixed; 
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;

  .container {
    padding-top: 40px;
  }
}

a {
  color: #00FF00;

  &:hover{
    color: #00FF00;
    text-decoration: none;
  }
}